<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"

    android:rowCount="12"
    android:columnCount="4">
    <!--缺少头像，账户名-->

    <ImageView
        android:id="@+id/informationImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <RadioButton
        android:id="@+id/account_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="账号信息"
        android:layout_marginBottom="20dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:id="@+id/SafeImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <RadioButton
        android:id="@+id/Safe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="隐私与安全"
        android:layout_marginBottom="20dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageView
        android:id="@+id/noticesetImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <RadioButton
        android:id="@+id/noticeSet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="通知设置"
        android:layout_marginBottom="20dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp" />
    <ImageView
        android:id="@+id/nightImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"/>
    <RadioButton
        android:id="@+id/night"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="夜间模式"
        android:layout_marginBottom="40dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:elevation="0dp"
        android:adjustViewBounds="false" />

    <ImageView
        android:id="@+id/AboutImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <RadioButton
        android:id="@+id/About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="关于我们"
        android:layout_marginBottom="20dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp" />


    <ImageView
        android:id="@+id/Image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <RadioButton
        android:id="@+id/suggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="意见反馈"
        android:layout_marginBottom="20dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp" />


    <ImageView
        android:id="@+id/VersionImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="40dp"/>
    <RadioButton
        android:id="@+id/Version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="版本更新"
        android:layout_marginBottom="40dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:id="@+id/ClearImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <RadioButton
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="清除缓存"
        android:layout_marginBottom="20dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp" />

    <ImageView
        android:id="@+id/ExitImage"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/star"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>
    <RadioButton
        android:id="@+id/Exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:textSize="20dp"
        android:text="退出账号"
        android:layout_marginBottom="20dp"/>
    <!--进入账号信息的箭头 >  -->
    <ImageButton android:background="@drawable/more"
        android:layout_width="25dp"
        android:layout_height="25dp" />

</GridLayout>